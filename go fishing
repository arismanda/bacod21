local ReplicatedStorage = game:GetService("ReplicatedStorage")
local FishingSystem = ReplicatedStorage:WaitForChild("FishingSystem")
local FishGiver = FishingSystem:WaitForChild("FishGiver")

local fishList = {
    {name = "Seamander", rarity = "Secret", weight = 2952},
    {name = "Hiu Banteng", rarity = "Secret", weight = 3520.6},
    {name = "Ikan Naga Samudra", rarity = "Secret", weight = 1520.6}
}

local hookPosition = Vector3.new(-714.4581298828125, 8.149999618530273, -1113.882080078125)

-- Fungsi loop sederhana
local function giveFishLoop(iterations)
    print("üé£ Memulai Fish Giver Loop (" .. iterations .. " iterations)")
    
    for iteration = 1, iterations do
        print("\n=== Iterasi ke-" .. iteration .. " ===")
        
        for i, fish in ipairs(fishList) do
            local args = {{
                hookPosition = hookPosition,
                rarity = fish.rarity,
                name = fish.name,
                weight = fish.weight
            }}
            
            local success = pcall(function()
                FishGiver:FireServer(unpack(args))
            end)
            
            if success then
                print("‚úÖ " .. fish.name .. " (" .. fish.weight .. "kg)")
            else
                print("‚ùå Gagal: " .. fish.name)
            end
            
            wait(0.1) -- Delay kecil antar ikan
        end
        
        if iteration < iterations then
            wait(0.5) -- Delay antar iterasi
        end
    end
    
    print("\nüé£ Selesai! Total: " .. (iterations * #fishList) .. " ikan diberikan")
end

-- Jalankan 5 kali
giveFishLoop(5)
